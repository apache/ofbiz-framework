                <entity-and entity-name="QuoteTerm" list="quoteTerms">
                    <field-map field-name="quoteId"  from-field="parameters.quoteId"/>
                    <field-map field-name="quoteItemSeqId" from-field="parameters.quoteItemSeqId"/>
                </entity-and>
