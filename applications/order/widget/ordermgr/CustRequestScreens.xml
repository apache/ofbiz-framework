                                <condition>
                                    <if-compare field="parameters.small" operator="equals" value="Y"/>
                                </condition>
                                <widgets>
                                    <include-form name="EditSmallCustRequest" location="component://order/widget/ordermgr/CustRequestForms.xml"/>
                                </widgets>
                                <fail-widgets>
