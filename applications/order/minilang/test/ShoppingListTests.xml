        </entity-one>
        <set field="serviceCtx.userLogin" from-field="userLogin"/>
        <call-service service-name="removeShoppingListItem" in-map-name="serviceCtx"/>
        <entity-one entity-name="ShoppingListItem" value-field="shoppingListItem">
