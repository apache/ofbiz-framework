    <screen name="ManufacturingReports">
        <section>
            <actions>
                <set field="titleProperty" value="ManufacturingReports"/>
                <set field="headerItem" value="ManufacturingReports"/>
                <set field="helpAnchor" value="_reports"/>

                <set field="mrpName" from-field="parameters.mrpName"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonManufacturingDecorator" location="${parameters.commonManufacturingDecoratorLocation}">
                    <decorator-section name="body">
                        <screenlet title="${uiLabelMap.ManufacturingReports}">
                            <include-form name="SelectMrpName" location="component://manufacturing/widget/manufacturing/ProductionRunForms.xml"/>
                            <platform-specific>
                                <html><html-template location="component://manufacturing/template/jobshopmgt/MrpReports.ftl"/></html>
                            </platform-specific>
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

