<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/simple-methods.xsd">
        
    <simple-method method-name="exampleComponentFormula" short-description="Formula that the number of linear components in bom">
        <set field="arguments" from-field="parameters.arguments"/>
        <calculate field-name="totQuantity">
            <calcop operator="multiply">
                <calcop operator="get" field-name="arguments.neededQuantity"/>
                <!-- This is the multiplier (k) -->
                <number value="10"/>
            </calcop>
        </calculate>
        <field-to-result field-name="totQuantity" result-name="quantity"/>
    </simple-method>
    
    <simple-method method-name="linearComponentConsumptionFormula" short-description="Formula that the number of linear components in bom">
        <set field="arguments" from-field="parameters.arguments"/>
        <calculate field-name="totQuantity">
            <calcop operator="multiply">
                <calcop operator="get" field-name="arguments.neededQuantity"/>
                <calcop operator="get" field-name="arguments.amount"/>
            </calcop>
        </calculate>
        <calculate field-name="quantityInt" type="Integer">
            <calcop operator="divide">
                <calcop operator="get" field-name="totQuantity"/>
                <calcop operator="get" field-name="arguments.width"/>
            </calcop>
        </calculate>
        <calculate field-name="quantityDou">
            <calcop operator="divide">
                <calcop operator="get" field-name="totQuantity"/>
                <calcop operator="get" field-name="arguments.width"/>
            </calcop>
        </calculate>
        <if-compare-field field-name="quantityInt" to-field-name="quantityDou" operator="less">
            <calculate field-name="quantity">
                <calcop operator="add">
                    <calcop operator="get" field-name="quantityInt"/>
                    <number value="1"/>
                </calcop>
            </calculate>
        <else>
            <calculate field-name="quantity">
                <calcop operator="add">
                    <calcop operator="get" field-name="quantityInt"/>
                    <number value="0"/>
                </calcop>
            </calculate>
        </else>
        </if-compare-field>
        <field-to-result field-name="quantity" result-name="quantity"/>
    </simple-method>
</simple-methods>
