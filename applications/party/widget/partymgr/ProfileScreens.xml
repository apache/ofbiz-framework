                                </widgets>
                            </section>
                            <include-form name="ListRelatedAccounts" location="component://party/widget/partymgr/PartyForms.xml"/>                                                 
                        </screenlet>
                    </widgets>
                </section>
            </widgets>
        </section>
    </screen>
    
