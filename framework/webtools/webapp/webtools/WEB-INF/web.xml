  <taglib> 
     <taglib-uri>ofbizTags</taglib-uri>
     <taglib-location>/WEB-INF/ofbiz.tld</taglib-location> 
  </taglib> 
  <taglib>
     <taglib-uri>regions</taglib-uri>
     <taglib-location>/WEB-INF/regions.tld</taglib-location> 
  </taglib> 

