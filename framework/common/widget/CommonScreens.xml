            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <actions>
                                <set field="getSecurityQuestionTemplateLocation" from-field="layoutSettings.VT_GSQUE_TMPLT_LOC[0]" default-value="component://common/template/GetSecurityQuestion.ftl"/>
                            </actions>
                            <widgets />
                        </section>
                        <platform-specific>
                            <html><html-template location="${getSecurityQuestionTemplateLocation}"/></html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
