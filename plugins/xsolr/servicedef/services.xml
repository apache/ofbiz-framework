            Indexes all products to SOLR.
        </description>
        <attribute name="productStoreId" mode="IN" type="String" optional="true"></attribute>
        <!--<attribute name="indexAllRecords" mode="IN" type="Boolean" optional="false"></attribute>-->
        <!--<attribute name="startIndex" mode="IN" type="int" optional="true"></attribute>-->
        <!--<attribute name="fetchSize" mode="IN" type="int" optional="true"></attribute>-->
    </service>

    <service name="searchProductsFromSolr" engine="java"
             location="com.simbaquartz.xsolr.fsdSolrConnector.services.SolrProductServices"
             invoke="searchProductsFromSolr"
             auth="false">
        <description>
            Searchs for the products in SOLR.
        </description>
        <attribute name="startIndex" mode="IN" type="Integer" optional="true"></attribute>

        <attribute name="productPrimaryCategoryId" mode="IN" type="String" optional="false"></attribute>
        <attribute name="productCategoryIds" mode="IN" type="List" optional="true"></attribute>

        <attribute name="shape" mode="IN" type="String" optional="true"></attribute>
        <attribute name="clarity" mode="IN" type="List" optional="true"></attribute>
        <attribute name="colors" mode="IN" type="List" optional="true"></attribute>
        <attribute name="carat" mode="IN" type="List" optional="true"></attribute>
        <attribute name="cuts" mode="IN" type="List" optional="true"></attribute>
        <attribute name="ringColor" mode="IN" type="String" optional="true"></attribute>
        <attribute name="priceFrom" mode="IN" type="BigDecimal" optional="true"></attribute>
        <attribute name="priceTo" mode="IN" type="BigDecimal" optional="true"></attribute>

        <attribute name="searchResults" mode="OUT" type="List" optional="false"></attribute>
        <attribute name="totalResultSize" mode="OUT" type="Integer" optional="false"></attribute>
    </service>


