    <version>1.0</version>

    <service name="searchProductsInSolr" engine="java"
             location="com.simbaquartz.xsolr.solr.product.SolrProductServices" invoke="searchProductsInSolr">
        <description>
            Sample spring solr data search service
        </description>
    </service>

    <!-- core solr services -->
    <service name="publishDocsToSolr" engine="java"
             location="com.simbaquartz.xsolr.services.SolrHelperServices" invoke="publishDocsToSolr" auth="false"
             use-transaction="false">
        <description>
            Publishes (Creates/Updates) list of documents to SOLR server. Commit and Optimize flags are
            true by default.
        </description>
        <attribute name="docsToPublish" mode="IN" type="List" optional="false"/>
        <attribute name="solrCoreName" mode="IN" type="String" optional="false"/>
        <attribute name="isCommitRequired" mode="IN" type="Boolean" optional="true"
                   default-value="true"/>
        <attribute name="isOptimizeRequired" mode="IN" type="Boolean" optional="true"
                   default-value="true"/>
        <attribute name="solrResponse" mode="OUT" type="String" optional="true"/>
    </service>

    <!-- core solr services -->
    <service name="deleteDocsFromSolr" engine="java"
             location="com.simbaquartz.xsolr.services.SolrHelperServices" invoke="deleteDocsFromSolr"
             auth="true"
             use-transaction="false">
        <description>
            Removes documents from SOLR using comma separated document ids. E.g.
            p-FTWRSPX00001,p-FTWRSPX00002
        </description>
        <attribute name="toBeDeletedIds" mode="IN" type="String" optional="false"/>
    </service>


    <service name="deleteAllDocsFromSolr" engine="java"
             location="com.simbaquartz.xsolr.services.SolrHelperServices" invoke="deleteAllDocsInSolr" auth="true"
