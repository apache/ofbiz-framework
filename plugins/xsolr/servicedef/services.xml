    <service name="performSolrSearch" engine="java"
             location="com.simbaquartz.xsolr.services.SolrSearchService"
             invoke="performSolrSearch" auth="false" transaction-timeout="7200"
             require-new-transaction="false" use-transaction="false">
        <description>
            A very generic solr search that should be used when possible to avoid making database calls.
            Supports faceted search as well. Example Usage
            &lt;code&gt;
            List&lt;String&gt; searchFields = FastList.newInstance();
            searchFields.add("quoteId");
            searchFields.add("quoteShippingDestinations");
            searchFields.add("quoteCustomerPartyId");

            String awardedQuoteConstraint = "quoteStatusId:QUO_ORDERED";
            List&lt;String&gt; filterQueryFields = UtilMisc.toList("docType:quote",
            awardedQuoteConstraint);
            List&lt;String&gt; facetFields = UtilMisc.toList("quoteCustomerPartyId");

            Map performSolrSearchContext = UtilMisc.toMap("searchFields", searchFields,
            "filterQueryFields",
            filterQueryFields, "facetFields", facetFields);
            Map performSolrSearchResponse = dispatcher.runSync("performSolrSearch",
            performSolrSearchContext);
            &lt;/code&gt;

        </description>
        <attribute name="searchFields" mode="IN" type="List" optional="false"/>
        <attribute name="filterQueryFields" mode="IN" type="List" optional="false"/>
        <attribute name="searchText" mode="IN" type="String" optional="true"/>
        <attribute name="sortBy" mode="IN" type="String" optional="true"/>
        <attribute name="facetFields" mode="IN" type="List" optional="true">
            <description>If supplied search will be made with faceting turned on, and results returned in
                the map
                containing the key value pairs as the field name and corresponding records.
            </description>
        </attribute>

        <attribute name="totalNumberOfRecords" mode="OUT" type="Integer" optional="false"/>
        <attribute name="records" mode="OUT" type="List" optional="false"/>
        <attribute name="facetResults" mode="OUT" type="List" optional="true">
            <description>Returns list of Map in the format [{ facetedFieldName: {value:'Facet Value',
                count: 'Facet
                Count'} } ], works only when facetFields are provided.
            </description>
        </attribute>
    </service>

