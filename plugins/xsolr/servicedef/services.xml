    <service name="solrGlobalSearch" engine="java"
             location="com.simbaquartz.xsolr.services.SolrServices"
             invoke="solrGlobalSearch" auth="true" transaction-timeout="7200"
             require-new-transaction="false" use-transaction="false">
        <description>
            Perform Global Search
        </description>
        <attribute name="keyword" mode="IN" type="String" optional="true"/>
        <attribute name="docType" mode="IN" type="String" optional="true"/>
        <attribute name="searchResult" mode="OUT" type="List" optional="false"/>
        <attribute name="startIndex" type="Integer" mode="IN" optional="true" default-value="0"/>
        <attribute name="viewSize" type="Integer" mode="IN" optional="true" default-value="10"/>
