<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/simple-methods-v2.xsd">

    <simple-method method-name="testGetPartyGroupForMagnisPartnersSalesExec" short-description="Test case for service getPartyGroupForPartyId" login-required="false">
        <set field="serviceCtx.partyId" value="MP.sales.exec"/>
        <entity-one entity-name="UserLogin" value-field="userLogin">
            <field-map field-name="userLoginId" value="forrest.rae"/>
        </entity-one>
        <set field="serviceCtx.userLogin" from-field="userLogin"/>
        <call-service service-name="getPartyGroupForPartyId" in-map-name="serviceCtx">
            <result-to-field result-name="organizationPartyGroup"/>
        </call-service>
        <check-errors/>
        <assert>
            <if-compare field="organizationPartyGroup.groupName" operator="equals" value="Magnis Partners Corporation" type="String"/>
        </assert>
        <check-errors/>
    </simple-method>

