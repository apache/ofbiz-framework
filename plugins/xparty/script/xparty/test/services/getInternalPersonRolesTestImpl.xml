<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/simple-methods-v2.xsd">

    <simple-method method-name="testGetInternalPersonRoles" short-description="Test case for service getInternalPersonRoles" login-required="false">
        <entity-one entity-name="UserLogin" value-field="userLogin">
            <field-map field-name="userLoginId" value="forrest.rae"/>
        </entity-one>
        <set field="serviceCtx.userLogin" from-field="userLogin"/>
        <call-service service-name="getInternalPersonRoles" in-map-name="serviceCtx">
            <result-to-field result-name="roleTypeIds"/>
            <result-to-field result-name="roles"/>
        </call-service>
        <check-errors/>
        <set field="rolesSize" value="${groovy: ( roleTypeIds.size() == 6 )}" type="Boolean"/>
        <assert>
            <if-compare field="rolesSize" operator="equals" value="true" type="Boolean"/>
            <if-compare field="roleTypeIds[0]" operator="equals" value="SALES_REP"/>
            <if-compare field="roleTypeIds[1]" operator="equals" value="MANAGER"/>
            <if-compare field="roleTypeIds[2]" operator="equals" value="ACCOUNT_LEAD"/>
            <if-compare field="roleTypeIds[3]" operator="equals" value="AGENT"/>
            <if-compare field="roleTypeIds[4]" operator="equals" value="OWNER"/>
        </assert>
        <check-errors/>
    </simple-method>

</simple-methods>
