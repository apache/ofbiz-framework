<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/simple-methods-v2.xsd">

    <simple-method method-name="testCreateSupplierRelationship" short-description="Test case for service createSupplierRelationship" login-required="false">
        <set field="serviceCtx.supplierPartyId" value="ACMETEST"/><!-- Test Supplier -->
        <entity-one entity-name="UserLogin" value-field="userLogin">
            <field-map field-name="userLoginId" value="forrest.rae"/>
        </entity-one>
        <set field="serviceCtx.userLogin" from-field="userLogin"/>
        <call-service service-name="createSupplierRelationship" in-map-name="serviceCtx">
        </call-service>
        <check-errors/>
        <entity-and entity-name="PartyRelationship" list="partyRelationshipList">
            <field-map field-name="partyIdTo" value="ACMETEST"/>
            <field-map field-name="partyIdFrom" value="FSD"/>
            <field-map field-name="roleTypeIdTo" value="SUPPLIER"/>
            <field-map field-name="roleTypeIdFrom" value="DISTRIBUTOR"/>
            <field-map field-name="partyRelationshipTypeId" value="SUPPLIER_REL"/>
        </entity-and>
        <set field="isRelationshipCreated" value="${groovy: ( partyRelationshipList.size() > 0 )}" type="Boolean"/>
        <assert>
            <if-compare field="isRelationshipCreated" operator="equals" value="true" type="Boolean"/>
        </assert>
        <check-errors/>
    </simple-method>

</simple-methods>
