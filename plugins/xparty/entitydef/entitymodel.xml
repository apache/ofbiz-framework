    <relation type="one-nofk" rel-entity-name="SecurityPermission">
      <key-map field-name="permissionId"/>
    </relation>
  </entity>

  <extend-entity entity-name="PartyInvitation">
    <field name="groupPartyId" type="id"/>
    <field name="teamPartyId" type="id"/>
    <!--How many times an invitee has been reminded about invitation pending acceptance-->
    <field name="remindedCount" type="numeric"/>
    <field name="expirationDate" type="date-time"/>
    <field name="acceptedDate" type="date-time"/>

    <relation type="one" title="InvitedToJoinOrg" rel-entity-name="Party">
      <key-map field-name="groupPartyId" rel-field-name="partyId"/>
    </relation>
    <relation type="one" title="InvitedToJoinTeam" rel-entity-name="Party">
      <key-map field-name="teamPartyId" rel-field-name="partyId"/>
    </relation>
  </extend-entity>

  <view-entity entity-name="PartyInvitationAndDetail" package-name="com.simbaquartz.xparty"
    title="Extended Party Invitation And Details, adds displayName, photoUrl, email to the list of fields being returned.">
    <member-entity entity-alias="PTYINV" entity-name="PartyInvitation"/>
    <member-entity entity-alias="PTYFRM" entity-name="Party"/>
    <member-entity entity-alias="PTYTO" entity-name="Party"/>

    <alias-all entity-alias="PTYINV"/>

    <alias entity-alias="PTYFRM" name="fromPhotoUrl" field="photoUrl"/>
    <alias entity-alias="PTYFRM" name="fromDisplayName" field="displayName"/>
    <alias entity-alias="PTYFRM" name="fromEmail" field="email"/>

    <alias entity-alias="PTYTO" name="toPhotoUrl" field="photoUrl"/>
    <alias entity-alias="PTYTO" name="toDisplayName" field="displayName"/>
