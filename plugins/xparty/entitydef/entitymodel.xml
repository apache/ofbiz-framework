    <view-link entity-alias="PTYINV" rel-entity-alias="PTYTO" rel-optional="false">
      <key-map field-name="partyId" rel-field-name="partyId"/>
    </view-link>
  </view-entity>

  <extend-entity entity-name="PartyAttribute">
    <!--
    Represents the data type for the attribute,
    String (Text) for plain text,
    Integer (Number) for numbers,
    BigDecimal (Decimal Number) for currencies,
    Double (Percentage) for storing percentages,
    Boolean (True or False),
    List (List),
    Date (Date),
    -->
    <field name="attributeDataTypeId" type="id"/>
    <!--
    Represents the type of aggregation applied to this field, some common aggregation types include
    Sum,
    Average,
    https://docs.oracle.com/cd/E12478_01/rpas/pdf/150/html/configuration_tools_user_guide/aggregation_types.htm
    -->
    <field name="aggregationTypeId" type="id"/>

    <relation type="one" fk-name="PA_AGRTN_TYPE" title="PartyAggregation"
      rel-entity-name="Enumeration">
      <key-map field-name="aggregationTypeId" rel-field-name="enumId"/>
    </relation>

  </extend-entity>

  <extend-entity entity-name="PartyContent">
    <field name="sequenceNum" type="numeric"/>
  </extend-entity>

  <extend-entity entity-name="CommunicationEvent">
