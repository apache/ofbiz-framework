    <member-entity entity-alias="CNT" entity-name="Content"/>
    <member-entity entity-alias="DR" entity-name="DataResource"/>
    <alias-all entity-alias="PCT"/>
    <alias-all entity-alias="CNT"/>
    <alias-all entity-alias="DR"/>
    <view-link entity-alias="PCT" rel-entity-alias="CNT">
      <key-map field-name="contentId"/>
    </view-link>
    <view-link entity-alias="CNT" rel-entity-alias="DR">
      <key-map field-name="dataResourceId"/>
    </view-link>
    <relation type="one-nofk" rel-entity-name="DataResource">
      <key-map field-name="dataResourceId"/>
    </relation>
    <relation type="one-nofk" rel-entity-name="ContentType">
      <key-map field-name="contentTypeId"/>
    </relation>
  </view-entity>
  <extend-entity entity-name="PartyContactMech">
    <field name="vaShipToSuffixCode" type="id"/>
    <field name="vaStationId" type="id"/>
  </extend-entity>

  <entity entity-name="PartyNoteContent"
    package-name="org.ofbiz.party.party"
    title="Description for the Party Content">
    <field name="partyId" type="id"/>
    <field name="contentId" type="id"/>
    <field name="description" type="description"/>
    <prim-key field="partyId"/>
    <prim-key field="contentId"/>
    <relation type="one" fk-name="PARTY_CNT_NOTE" rel-entity-name="Party">
      <key-map field-name="partyId" rel-field-name="partyId"/>
    </relation>
    <relation type="one" fk-name="PARTY_CNTNT_CNTNT" rel-entity-name="Content">
      <key-map field-name="contentId" rel-field-name="contentId"/>
    </relation>
  </entity>

  <view-entity entity-name="ExtPartyNoteView"
    package-name="com.simbaquartz.xparty"
    title="Extended Party Note View Entity, includes Party fields as well">
    <member-entity entity-alias="PT" entity-name="Party"/>
    <member-entity entity-alias="PN" entity-name="PartyNote"/>
    <member-entity entity-alias="ND" entity-name="NoteData"/>
    <alias entity-alias="PN" name="targetPartyId" field="partyId"/>
    <alias entity-alias="ND" name="noteId"/>
    <alias entity-alias="ND" name="noteName"/>
    <alias entity-alias="ND" name="jsonText"/>
    <alias entity-alias="ND" name="noteInfo"/>
    <alias entity-alias="ND" name="noteDateTime"/>
    <alias entity-alias="ND" name="noteParty"/>
    <view-link entity-alias="PT" rel-entity-alias="PN">
      <key-map field-name="partyId"/>
    </view-link>
    <view-link entity-alias="PN" rel-entity-alias="ND">
      <key-map field-name="noteId"/>
    </view-link>
  </view-entity>

  <extend-entity entity-name="ContactMechAttribute">
    <field name="attrValue" type="very-long"></field>
  </extend-entity>

  <!-- For Contact Label-->
  <view-entity entity-name="ContactMechTypeAndPurpose"
    package-name="com.simbaquartz.xparty"
    title="Extended Contact Mech Type and Contact Mech Type Purpose">
    <member-entity entity-alias="CMT" entity-name="ContactMechType"/>
    <member-entity entity-alias="PMTP" entity-name="ContactMechTypePurpose"/>
    <alias-all entity-alias="CMT"/>
    <alias-all entity-alias="PMTP"/>

    <view-link entity-alias="CMT" rel-entity-alias="PMTP" rel-optional="true">
      <key-map field-name="contactMechTypeId" rel-field-name="contactMechTypeId"/>
    </view-link>
  </view-entity>

  <!--Resource work schedule-->
  <entity entity-name="RoleManager"
    package-name="org.ofbiz.xparty"
    title="Company Resources Roles and Profile Management Entity">
    <field name="groupPartyId" type="id"/>
    <field name="roleTypeId" type="id"/>
    <field name="roleType" type="id"/>

    <prim-key field="groupPartyId"/>
    <prim-key field="roleTypeId"/>

    <relation type="one" title="Parent" rel-entity-name="RoleType">
      <key-map field-name="roleTypeId"/>
    </relation>
    <relation type="one" rel-entity-name="PartyGroup">
      <key-map field-name="groupPartyId" rel-field-name="partyId"/>
    </relation>
  </entity>

  <!--Resource work schedule-->
  <entity entity-name="RolePermission"
    package-name="org.ofbiz.xparty"
    title="Company Resources Roles and Profile Management Entity">
    <field name="permissionId" type="id-long"/>
    <field name="roleTypeId" type="id"/>

    <prim-key field="permissionId"/>
    <prim-key field="roleTypeId"/>

    <relation type="one" title="Parent" rel-entity-name="RoleType">
      <key-map field-name="roleTypeId"/>
