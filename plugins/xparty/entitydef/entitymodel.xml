    <field name="callLogDuration" type="value"></field>
    <field name="messageLabels" type="value">
      <description>Comma separated labels. eg. INBOX,SENT,IMPORTANT,...</description>
    </field>
  </extend-entity>

  <extend-entity entity-name="PartyContactMechPurpose">
    <field name="label" type="short-varchar"></field>
  </extend-entity>

