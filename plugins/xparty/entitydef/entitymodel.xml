<entitymodel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/entitymodel.xsd">
  <!-- ========================================================= -->
  <!-- ======================== Defaults ======================= -->
  <!-- ========================================================= -->
  <title>Entity of Xparty Component</title>
  <description>Extension to base Party Component</description>
  <copyright></copyright>
  <version></version>

  <extend-entity entity-name="Party">
    <!--To store the frequently used Photo URL for a party (Person/Group/Team etc.)-->
    <field name="photoUrl" type="url"/>
    <field name="displayName" type="long-varchar"/>
    <field name="email" type="long-varchar"/>
    <field name="searchText" type="very-long"/>
    <field name="lastLoggedInAt" type="date-time"/>
    <field name="location" type="value">
      <description>Location of the party (in city,State/Province format), example California, USA
      </description>
    </field>
    <field name="locationContactMechId" type="id">
      <description>Location ContactMech id of the party to fetch more details about the party.
      </description>
    </field>
    <field name="rating" type="floating-point">
      <description>Average rating of the party from all the submitted ratings
      </description>
    </field>
    <relation type="one" fk-name="PRTY_LOC" rel-entity-name="PostalAddress">
      <key-map field-name="locationContactMechId" rel-field-name="contactMechId"/>
    </relation>
  </extend-entity>

  <extend-entity entity-name="Person">
    <field name="displayName" type="name"/>
  </extend-entity>

  <view-entity entity-name="ExtPartyRelationshipAndDetail"
    package-name="org.apache.ofbiz.party.party"
    title="Extended Party Relationship And Details, adds displayName, photoUrl, email to the list of fields being returned.">
    <member-entity entity-alias="PTY" entity-name="Party"/>
    <member-entity entity-alias="PTYREL" entity-name="PartyRelationship"/>
    <member-entity entity-alias="PER" entity-name="Person"/>
    <member-entity entity-alias="PTYGRP" entity-name="PartyGroup"/>
    <member-entity entity-alias="ULN" entity-name="UserLogin"/>

    <!--To weed out pending invitations-->
    <member-entity entity-alias="PTYINV" entity-name="PartyInvitation"/>
    <member-entity entity-alias="PTYADDR" entity-name="PostalAddress"/>

    <alias-all entity-alias="PTYREL" />
    <alias-all entity-alias="PTYADDR" prefix="location"/>

    <alias entity-alias="PTY" name="partyId"/>
    <alias entity-alias="PTY" name="lastLoggedInAt"/>
    <alias entity-alias="PTY" name="createdDate"/>
    <alias entity-alias="PTY" name="lastModifiedDate"/>
    <alias entity-alias="PTY" name="externalId"/>
    <alias entity-alias="PTY" name="partyTypeId"/>
    <alias entity-alias="PTY" name="description"/>
    <alias entity-alias="PTY" name="partyStatusId" field="statusId"/>
    <alias entity-alias="PTY" name="photoUrl"/>
    <alias entity-alias="PTY" name="displayName"/>
    <alias entity-alias="PTY" name="email"/>
    <alias entity-alias="PTY" name="searchText"/>
    <alias entity-alias="PTY" name="locationContactMechId"/>

    <alias entity-alias="PER" name="firstName"/>
    <alias entity-alias="PER" name="middleName"/>
    <alias entity-alias="PER" name="lastName"/>
    <alias entity-alias="PER" name="firstNameLocal"/>
    <alias entity-alias="PER" name="lastNameLocal"/>
    <alias entity-alias="PER" name="personalTitle"/>
    <alias entity-alias="PER" name="suffix"/>

    <alias entity-alias="ULN" name="lastTimeZone"/>

    <alias entity-alias="PTYGRP" name="groupName"/>
    <alias entity-alias="PTYGRP" name="groupNameLocal"/>

    <alias entity-alias="PTYINV" name="invitationStatusId" field="statusId"/>


    <view-link entity-alias="PTY" rel-entity-alias="PTYREL" rel-optional="true">
      <key-map field-name="partyId" rel-field-name="partyIdTo"/>
    </view-link>
    <view-link entity-alias="PTY" rel-entity-alias="PER" rel-optional="true">
      <key-map field-name="partyId"/>
    </view-link>
    <view-link entity-alias="PTY" rel-entity-alias="PTYGRP" rel-optional="true">
      <key-map field-name="partyId"/>
    </view-link>
    <view-link entity-alias="PTY" rel-entity-alias="PTYINV" rel-optional="true">
      <key-map field-name="partyId"/>
    </view-link>
    <view-link entity-alias="PTY" rel-entity-alias="PTYADDR" rel-optional="true">
      <key-map field-name="locationContactMechId" rel-field-name="contactMechId"/>
    </view-link>
    <view-link entity-alias="PTY" rel-entity-alias="ULN">
      <key-map field-name="partyId"/>
    </view-link>
    <relation type="one-nofk" rel-entity-name="UserLogin">
      <key-map field-name="userLoginId"/>
    </relation>
    <relation type="one-nofk" rel-entity-name="PostalAddress">
      <key-map field-name="locationContactMechId" rel-field-name="contactMechId"/>
    </relation>
    <relation type="one-nofk" rel-entity-name="Party">
      <key-map field-name="partyId"/>
    </relation>
  </view-entity>

  <extend-entity entity-name="Product">
    <field name="sku" type="description"/>
    <field name="barcode" type="description"/>
  </extend-entity>
  <extend-entity entity-name="ContactMech">
