<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
  <description>Postal address management related Services</description>
  <vendor>SimbaQuartz</vendor>
  <version>1.0</version>
  <service name="mmoGetPartyAddressDetails" engine="java"
    location="com.simbaquartz.xparty.services.location.PostalAddressServices"
    invoke="mmoGetPartyAddressDetails"
    auth="true">
    <description>Returns the postal address based on the input contactMechId.</description>
    <attribute name="contactMechId" type="String" mode="IN" optional="false"/>

    <attribute name="addressDetails" type="Map" mode="OUT" optional="false"/>
  </service>
  <service name="axGetPartyAddresses" engine="java"
    location="com.simbaquartz.xparty.services.location.PostalAddressServices"
    invoke="axGetPartyAddresses"
    auth="true">
    <description>Get Address</description>
    <attribute name="addresses" type="List" mode="OUT" optional="false"/>
  </service>

  <service name="extCreatePostalAddress" engine="java"
    location="com.simbaquartz.xparty.services.location.PostalAddressServices"
    invoke="extCreatePostalAddress" auth="true">
    <description>Extended create postal address service with support for geo location meta data,
      also allows an address to be created by using country only.
      Expects at least a countryGeoId as mandatory input. Honors input party id,
      if provided sets the address as users' primary address (PRIMARY_LOCATION) if purposeTypeId is empty, else uses the input purposeTypeId
    </description>
    <auto-attributes entity-name="PostalAddress" include="all" mode="IN" optional="true"/>
    <attribute name="contactMechId" type="String" mode="OUT" optional="false"/>
    <attribute name="createdPostalAddress" type="GenericValue" mode="OUT" optional="false"/>
    <override name="countryGeoId" mode="IN" optional="false"/>
    <override name="adrAddress" mode="IN" optional="true" allow-html="safe"/>
  </service>
  <service name="extCreatePartyPostalAddress" engine="java"
    location="com.simbaquartz.xparty.services.location.PostalAddressServices"
    invoke="extCreatePartyPostalAddress" auth="true">
    <description>Extended create postal address service with support for geo location meta data,
      also allows an address to be created by using country only.
      Expects at least a countryGeoId as mandatory input. Honors input party id,
      if provided sets the address as users' primary address (PRIMARY_LOCATION) if purposeTypeId is empty, else uses the input purposeTypeId
    </description>
    <auto-attributes entity-name="PostalAddress" include="all" mode="IN" optional="true"/>
    <attribute name="partyId" type="String" mode="IN" optional="true"/>
    <attribute name="purposeTypeId" type="String" mode="IN" optional="true" default-value="PRIMARY_LOCATION"/>
    <attribute name="contactMechId" type="String" mode="OUT" optional="false"/>
    <attribute name="createdPostalAddress" type="GenericValue" mode="OUT" optional="false"/>
    <override name="countryGeoId" mode="IN" optional="false"/>
    <override name="adrAddress" mode="IN" optional="true" allow-html="safe"/>
  </service>

  <service name="extUpdatePostalAddress" engine="java"
    location="com.simbaquartz.xparty.services.location.PostalAddressServices"
    invoke="extUpdatePostalAddress" auth="true">
    <description>Updates Postal Address</description>
    <auto-attributes entity-name="PostalAddress" include="all" mode="IN" optional="true"/>
    <attribute name="contactMechId" type="String" mode="IN" optional="false"/>
    <attribute name="partyId" type="String" mode="IN" optional="true"/>

    <attribute name="updatedPostalAddress" type="GenericValue" mode="OUT" optional="false"/>
    <override name="adrAddress" mode="IN" optional="true" allow-html="safe"/>

  </service>

</services>